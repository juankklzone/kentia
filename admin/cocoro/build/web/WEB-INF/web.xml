<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RegistroPrendas</servlet-name>
        <servlet-class>servlets.RegistroPrendas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarPrendas</servlet-name>
        <servlet-class>servlets.EliminarPrendas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>servlets.IniciarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>servlets.CerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarPrendas</servlet-name>
        <servlet-class>servlets.ConsultarPrendas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroPrendas</servlet-name>
        <url-pattern>/RegistroPrendas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarPrendas</servlet-name>
        <url-pattern>/EliminarPrendas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarPrendas</servlet-name>
        <url-pattern>/ConsultarPrendas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
